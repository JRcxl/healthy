<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.RecipeDao">


    <select id="findAll" resultType="com.itheima.entity.Recipe">
        SELECT * FROM recipes
    </select>

    <select id="findById" resultType="com.itheima.entity.Recipe">
        SELECT * FROM recipes where recipe_id=#{recipe_id}
    </select>


</mapper>